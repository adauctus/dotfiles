function virtualenv_activate() {
    if [[ -z "$VIRTUAL_ENV" ]]; then
        if [[ -d ./venv ]]; then
            activate
        fi
    else
        parentdir=$(dirname "$VIRTUAL_ENV")
        if [[ "$PWD"/ != "$parentdir"/* ]]; then
            deactivate
        fi
    fi
}
chpwd_functions+=("virtualenv_activate")

